<ul id="demos">
  <li>
    {{#tool-tipster title="This is a tooltip"}}
    Hover
    {{/tool-tipster}}
    <p>
      Default settings
    </p>
  </li>

  <li>
  {{#tool-tipster
    content="Try clicking <a href='https://www.google.com'>this link</a>"
    contentAsHTML=true
    interactive=true
    theme="tooltipster-borderless"
    }}
    Hover
    {{/tool-tipster}}
    <p>
      Interaction with tooltips
    </p>
  </li>

  <li>
    {{#tool-tipster title="Custom theme & animation" theme="tooltipster-punk" animation="grow"}}
    Hover
    {{/tool-tipster}}
    <p>
      Custom themes & animations
    </p>
  </li>

  <li>
    {{#tool-tipster
    content="<img src='http://lorempixel.com/45/45/abstract/' width='50' height='50' style='float:left;margin:1em 10px 0 0;border:2px solid white'/><p style='text-align:left;'><strong>Neque porro quisquam est Qui.</strong> Dolorem ipsum quia dolor sit amet.</p>"
    contentAsHTML=true
    side="right"
    minWidth=300
    maxWidth=300
  }}
  Hover
  {{/tool-tipster}}
  <p>
    Fixed width, position, & HTML
  </p>
</li>

<li>
  {{#tool-tipster title="Fade tooltip on the right" theme="tooltipster-punk" animation="fade" side="right"}}
  Hover
  {{/tool-tipster}}
  <p>
    Fade
  </p>
</li>

<li>
  {{#tool-tipster title="Grow tooltip on the left" theme="tooltipster-light" animation="grow" side="left"}}
  Hover
  {{/tool-tipster}}
  <p>
    Grow
  </p>
</li>

<li>
  {{#tool-tipster title="Swing tooltip on bottom" theme="tooltipster-noir" animation="swing" side="bottom"}}
  Hover
  {{/tool-tipster}}
  <p>
    Swing
  </p>
</li>

<li>
  {{#tool-tipster title="Slide tooltip" theme="tooltipster-shadow" animation="slide" side="top"}}
  Hover
  {{/tool-tipster}}
  <p>
    Slide
  </p>
</li>

<li>
  {{#tool-tipster title="Fall tooltip" theme="tooltipster-borderless" animation="fall" side="bottom"}}
  Hover
  {{/tool-tipster}}
  <p>
    Fall
  </p>
</li>

<li>
  {{#tool-tipster title="Timed tooltip - will close after 2 seconds" theme="tooltipster-borderless" timer=2000}}
  Hover
  {{/tool-tipster}}
  <p>
    With timer (auto closes)
  </p>
</li>

<li>
  {{#tool-tipster title="Show/hide on click" triggerEvent="click"}}
  Click
  {{/tool-tipster}}
  <p>
    Trigger on click
  </p>
</li>

</ul>
